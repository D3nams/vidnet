# Production Environment Configuration
# Copy this file and set actual values for production deployment

# Application Settings
ENVIRONMENT=production
DEBUG=false

# Redis Configuration (will be overridden by platform-specific Redis URL)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL Settings (in seconds)
METADATA_CACHE_TTL=3600
DOWNLOAD_CACHE_TTL=1800

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=2000
RATE_LIMIT_BURST_LIMIT=20
RATE_LIMIT_QUEUE_SIZE=200
RATE_LIMIT_QUEUE_TIMEOUT=30
RATE_LIMIT_ENABLE_GRACEFUL_DEGRADATION=true

# Performance Monitoring Configuration
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_MAX_METRICS_HISTORY=10000
PERFORMANCE_RESPONSE_TIME_WARNING=2.0
PERFORMANCE_RESPONSE_TIME_CRITICAL=5.0
PERFORMANCE_CPU_WARNING=70.0
PERFORMANCE_CPU_CRITICAL=90.0
PERFORMANCE_MEMORY_WARNING=75.0
PERFORMANCE_MEMORY_CRITICAL=90.0
PERFORMANCE_ERROR_RATE_WARNING=5.0
PERFORMANCE_ERROR_RATE_CRITICAL=15.0

# Graceful Degradation Configuration
DEGRADATION_CONCURRENT_THRESHOLD=100

# Analytics Configuration (set these in production)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Security Configuration
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Storage Configuration
MAX_FILE_SIZE_MB=500
CLEANUP_INTERVAL_MINUTES=30
MAX_STORAGE_GB=10

# External Service URLs (if needed)
UPSTASH_REDIS_URL="https://flying-reptile-13691.upstash.io"
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=